<section class="form-container">
<section class="login-section">
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Login Here</label>
  <div class="form-group">
  <form class="login-form" action="/submit_form" method="post">
    <label for="email-login" class="form-label mt-4">Email</label>
    <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div> 
    <br/><br/>

    <div class="form-group">
    <label for="password-login" class="form-label mt-4">Password</label>
    <input
      type="password"
      class="form-control"
      id="password-login"
      placeholder="Password" autocomplete="off">
    <br /><br />
    <button type="'submit" class="btn btn-light">Sign Up</button>
    </div>
  </form>
</section>

<section class="signup-section">
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Signup Here</label>
  <div class="form-group"></div>
  <form class="signup-form" action="/submit_form" method="post">
    <label for="email-login" class="form-label mt-4">Email</label>
    <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div> 

    <label for="username-signup" class="form-label mt-4">Username</label>
    <input
      type="text"
      class="form-control"
      id="username-signup"
      placeholder="Enter a username">
    <br /><br />

    <div class="form-group">
    <label for="password-login" class="form-label mt-4">Password</label>
    <input
      type="password"
      class="form-control"
      id="password-login"
      placeholder="Enter a Password" autocomplete="off">
    <br /><br />
    <button type="'submit" class="btn btn-light">Sign Up</button>
    </div>
  </form>
</section>
  </div>
</section>

